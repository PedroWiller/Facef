SELECT 	c.*, 
	p.*
    FROM tb_Cliente c
    INNER JOIN tb_Pedido p
	ON c.id_Cliente = p.id_Cliente
    WHERE nome = 'Anna' AND sobrenome = 'Kelly';

SELECT * 
    FROM tb_Pedido
    WHERE id_Cliente = 8;
--junção
SELECT 	c.Nome,
	p.dt_Compra
    FROM tb_Cliente AS c, tb_Pedido AS p
    WHERE c.id_Cliente = p.id_Cliente
      AND c.id_Cliente = 8;

SELECT 	c.Nome,
	p.dt_Compra
    FROM tb_Cliente AS c, tb_Pedido AS p
    WHERE c.id_Cliente = p.id_Cliente
      AND c.nome = 'Agnaldo'
      AND c.sobrenome = 'Aparecido';

SELECT 	c.Nome,
	p.dt_Compra
    FROM tb_Cliente AS c
    INNER JOIN tb_Pedido p
	ON c.id_Cliente =  p.id_Cliente
    WHERE c.id_Cliente = p.id_Cliente
      AND c.nome = 'Agnaldo'
      AND c.sobrenome = 'Aparecido';

SELECT 	ds_item,
	preco_custo,
	codigo_barras
    FROM tb_item it, tb_codigo_barras cb
    WHERE cb.id_item = it.id_item
    ORDER BY 2;

 
SELECT 	ds_item,
	preco_custo,
	codigo_barras
    FROM tb_item i
    INNER JOIN tb_codigo_barras cb
	ON i.id_item =  cb.id_item
    ORDER BY 2;

SELECT 	c.nome,
	p.dt_compra
    FROM tb_Cliente c, tb_Pedido p
    WHERE c.id_Cliente =  p.id_Cliente
      AND c.nome = 'Anna'
      AND c.sobrenome = 'Kelly';

SELECT 	c.nome,
	p.dt_compra,
	ip.id_item,
	ip.quantidade
    FROM tb_Cliente c, tb_Pedido p, tb_item_pedido ip
    WHERE c.id_Cliente = p.id_Cliente
	AND p.id_Pedido = ip.id_Pedido
	AND c.nome = 'Anna'
	AND c.sobrenome = 'Kelly';

SELECT 	c.nome,
	p.dt_compra,
	ip.id_item,
	ip.quantidade
    FROM tb_Cliente c
        INNER JOIN tb_Pedido p
	    ON c.id_Cliente = p.id_Cliente
        INNER JOIN tb_item_pedido ip
	    ON p.id_Pedido = ip.id_Pedido
    WHERE c.nome = 'Anna'
        AND c.sobrenome = 'Kelly';

 